baseColor = #222
linkColor = #24446e
headingSize = 2.4em
textSize = 1.15em
textSizeSmall = 0.8em
firstLetter = 2em

html, body
    height: 100%
    width: 100%
    margin: 0
    padding: 0
a
	color: #00B7FF
.nav_bar_fixed
	position: fixed
	z-index: 1
	top: 0%
	width: 100%
	height: 8%
	background-color: black
	opacity: 0.6
	.title
		position:relative
		display: inline-block
		margin: 10px
		margin-left: 5%
		color: #fff
		font-family: 'Montserrat', sans-serif;
		font-size: 1.3em
		a
			text-decoration: none
			color: #fff
	.nav_list
		position: relative
		left: 30%
		display: inline-block
		li
			display: inline-block
			text-decoration: none
			margin-right: 20px
			font-family: 'Montserrat', sans-serif;
			color: #fff
			a
				text-decoration: none
				color: #fff
#heading_image
	position: fixed
	top: 0%
	left: 0%
	z-index: -1
	width: 100%
	opacity: 0.8


.parallax_effect
	position: relative
	width: 100%
	height: 100%
	#title_box
		position: relative
		margin: auto
		top: 30%
		width: 50%
		font-family: 'Montserrat', sans-serif;
		color: #fff
		font-size: headingSize
		#title_typing_effect
			padding: 30px
			background-color: black
			opacity: 0.6
			span.line_init
				color: red
				margin-right: 10px
			span.line_content
				color: yellow
		#see_more_button
			margin-top: 24%
			margin-left: auto
			margin-right: auto
			width: 180px
			height: 50px
			background-color: #222
			opacity: 0
			#see_more_button_text
				text-align: center
				font-size: 0.4em
				padding: 12px 10px 10px 10px
				a
					text-decoration: none
					color: #fff
			

.about_me
	position: relative
	width: 100%
	height: 70%
	background-color: #fff
	font-family: 'Montserrat', sans-serif;
	.about_me_title
		position: relative
		text-align: center
		font-size: headingSize
		color: baseColor
		padding: 40px
	.line
		position: relative
		width: 10%
		margin: auto
		height: 2px
		background-color: baseColor
	.about_me_content
		font-family: sans-serif
		position: relative
		text-align: justify
		padding: 40px
		width: 60%
		margin: auto
		font-size: textSize
		.first_letter
			font-size: firstLetter
		.about_me_pre_content
			padding:10px
		.about_me_middle_content
			padding:10px
		.about_me_footer
			padding:10px
		a
			text-decoration: none
			color: linkColor
			

.resume
	position: relative
	width: 100%
	height: 50%
	background-color: #222
	font-family: 'Montserrat', sans-serif
	color: #fff
	.resume_block
		position: relative
		width: 100%
		height: 50%
		margin: auto
		.resume_block_content
			font-size: headingSize
			text-align: center
			padding: 40px
		.line
			position: relative
			width: 10%
			margin: auto
			height: 2px
			background-color: #fff
		.resume_button
			position: relative
			text-align: center
			font-size: firstLetter
			margin: auto
			padding: 5px
			top: 30%
			width: 20%
			height: 25%
			border-style: solid
			border-width: 1px
			a
				text-decoration: none
				color: #fff

.work_and_experiences
	position: relative
	width: 100%
	height: 170%
	background-color: #fff
	font-family: 'Montserrat', sans-serif;
	.work_ex_title
		position:relative
		font-size: headingSize
		text-align: center
		padding: 40px;
		color: baseColor
	.line
		position: relative
		width: 10%
		margin: auto
		height: 2px
		background-color: #222
	.list_of_projects
		position: relative
		width: 80%
		height: 50%
		margin: auto
		top: 5%
		.project
			display: inline-block
			padding: 2%
			.project_logo 
				margin: 15px
				display: inline-block
				width:20%
				#google_logo
					height: 10%
					width: 100%
				#mineSweeper_logo
					display: block
					margin: auto
					width: 60%
					height: 60%
					margin-top: 20px
				#code_assist_logo
					display: block
					width: 150%
					margin-left: -30px
					margin-top: 20px
				#quote_it_logo
					width: 100%
					margin-top: -20px
			.project_description
				position: relative
				width: 60%
				float: right
				margin: 15px
				text-align: justify
				font-size: textSize
				display: inline-block
				font-family: sans-serif
				.project_designation
					font-family: 'Montserrat', sans-serif;
					a
						text-decoration: none
						color: linkColor
				.project_duration
					font-family: sans-serif;
					font-size: textSizeSmall
					margin-bottom: 10px


.footer
	position: relative
	width: 100%
	height: 60%
	background-color: #222
	font-family: 'Montserrat', sans-serif;
	color: #fff
	.contact_block
		.contact_title
			position:relative
			font-size: headingSize
			text-align: center
			padding: 40px
		.line
			position: relative
			width: 5%
			margin: auto
			height: 2px
			background-color: #fff
		.contact_content
			position: relative
			margin: auto
			width: 50%
			.contact_statement
				text-align: center
				padding: 5%
			.contact_info
				padding: 2%
				text-align: center
			.contact_social_links
				position: relative
				text-align: center
				.contact_social_container
					display:inline
					.contact_profile_image_links
						display: inline-block
						width: 50%
						padding: 2%
						#linkedin_logo
							width: 15%
							height: 10%
							margin-left: 2%
							margin-right: 2%
						#github_logo
							width: 15%
							height: 10%
							margin-left: 2%
							margin-right: 2%
						#facebook_logo
							width: 15%
							height: 10%
							margin-left: 2%
							margin-right: 2%

